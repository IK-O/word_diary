%h2.text-center Log in
.row
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .row
      .col.s12
        = f.input :email, required: false, autofocus: true, input_html: {autocomplete: 'off'}
    .row
      .col.s12
        = f.input :password, required: false
    .row
      .col.s12
        = f.input :remember_me, as: :boolean , input_html: {class: ['filled-in']} if devise_mapping.rememberable?
    .row
      .col.s12
        = f.button :submit, "Log in",  class: %w(col s12)
= render "devise/shared/links"
