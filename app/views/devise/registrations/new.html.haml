.row
  %h2.center-align Sign up
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = f.error_notification
    .row
      = f.input :name, required: true,  input_html: { autocomplete: 'off' }, wrapper_html: { class: ['col', 's12'] }  
    .row
      = f.input :email, required: true, input_html: { autocomplete: 'off' }, wrapper_html: { class: ['col','s12'] }
    .row
      = f.input :password, required: true, wrapper_html: { class: ['col', 's12'] }, |
              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
    .row
      = f.input :password_confirmation, required: true, wrapper_html: { class: ['col','s12']}
    .row
      = f.button :submit, "Sign up", class: ['col', 's6', 'push-s3']
= render "devise/shared/links"
